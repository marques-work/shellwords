{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "module": "commonjs",
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "target": "es5"
  },
  "include": ["src"],
  "exclude": [ "node_modules", "dist" ]
}
